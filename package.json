{
  "name": "@julr/utils",
  "type": "module",
  "version": "1.0.0",
  "packageManager": "pnpm@9.15.4",
  "description": "",
  "author": "Julien Ripouteau <julien@ripouteau.com>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/Julien-R44",
  "homepage": "https://github.com/Julien-R44/[name]#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Julien-R44/[name].git"
  },
  "bugs": {
    "url": "https://github.com/Julien-R44/[name]/issues"
  },
  "keywords": [],
  "exports": {
    "./logger": "./build/esm/logger/index.js",
    "./misc": "./build/esm/misc.js",
    "./string": "./build/esm/string.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup-node && tsc --emitDeclarationOnly --declaration",
    "lint": "eslint .",
    "release": "bumpp --commit --push --tag && pnpm publish",
    "typecheck": "tsc --noEmit",
    "test": "echo \"No tests for now\" && exit 0"
  },
  "devDependencies": {
    "@japa/assert": "^4.0.1",
    "@japa/runner": "^4.2.0",
    "@julr/tooling-configs": "^3.1.0",
    "@types/node": "^22.13.0",
    "bumpp": "^10.0.1",
    "eslint": "^9.19.0",
    "prettier": "^3.4.2",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3"
  },
  "tsup": {
    "entry": [
      "./src/logger/index.ts",
      "./src/misc.ts",
      "./src/string.ts"
    ],
    "outDir": "./build",
    "clean": true,
    "format": "esm",
    "legacyOutput": true,
    "dts": false,
    "sourcemap": false,
    "target": "esnext"
  },
  "prettier": "@julr/tooling-configs/prettier"
}
